{
  "width": 700,
  "height": 500,
  "padding": {"top": 10,"left": 90,"bottom": 50,"right": 10},
  "data": [
    {
      "name": "table",
      "values": []
    }
  ],
   
  "signals": [
    {
      "name": "tooltip",
      "init": {},
      "streams": [
        {"type": "rect:mouseover","expr": "datum"},
        {"type": "rect:mouseout","expr": "{}"},
         {"type": "rect:dblclick", "expr":  "open('result.jsp?cancel='+datum.cancellation_num+'&state='+datum.state)"   }
      ]
    }
  ],
  "predicates": [
    {
      "name": "tooltip",
      "type": "==",
      "operands": [{"signal": "tooltip._id"},{"arg": "id"}]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "ordinal",
      "range": "width",
      "domain": {"data": "table","field": "state"}
    },
    {
      "name": "yscale",
      "range": "height",
      "nice": true,
      "domain": {"data": "table","field": "cancellation_num"}
    }
  ],
  "axes": [
    {"type": "x","scale": "xscale", "title": "X-Axis"},
    {"type": "y","scale": "yscale", "title": "Y-Axis"}
  ],
  "marks": [
    {
      "type": "rect",
      "from": {"data": "table"},
      "properties": {
        "enter": {
          "x": {"scale": "xscale","field": "state"},
          "width": {"scale": "xscale","band": true,"offset": -4},
          "y": {"scale": "yscale","field": "cancellation_num"},
          "y2": {"scale": "yscale","value": 0}
        },
        "update": {"fill": {"value": "steelblue"}},
        "hover": {"fill": {"value": "green"}}
      }
    },
    {
      "type": "text",
      "properties": {
        "enter": {
          "align": {"value": "center"},
          "fill": {"value": "#333"}
        },
        "update": {
          "x": {"scale": "xscale","signal": "tooltip.state"},
          "dx": {"scale": "xscale","band": true,"mult": 0.5},
          "y": {
            "scale": "yscale",
            "signal": "tooltip.cancellation_num",
            "offset": -5
          },
          "text": {"signal": "tooltip.cancellation_num"},
          "fillOpacity": {
            "rule": [
              {
                "predicate": {"name": "tooltip","id": {"value": null}},
                "value": 0
              },
              {"value": 1}
            ]
          }
        }
      }
    }
  ]
}